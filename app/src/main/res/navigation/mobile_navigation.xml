<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.daviddev.mewert.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_add_item"
        android:name="com.daviddev.mewert.ui.addItem.AddItemFragment"
        android:label="@string/title_title_add_item"
        tools:layout="@layout/fragment_add_item" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.daviddev.mewert.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_tips"
        android:name="com.daviddev.mewert.ui.tips.TipsFragment"
        android:label="fragment_tips"
        tools:layout="@layout/fragment_tips" />

    <activity
        android:id="@+id/accessPinActivity"
        android:name="com.daviddev.mewert.AccessPinActivity"
        android:label="activity_access_pin"
        tools:layout="@layout/activity_access_pin" />
</navigation>